# 测试环境配置
NODE_ENV=staging
APP_NAME=Motor Projects Staging

# 数据库配置
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=staging_admin123
MONGODB_URI=mongodb://admin:staging_admin123@mongo-primary:27017/motor_staging?authSource=admin

# Redis配置  
REDIS_PASSWORD=staging_redis123
REDIS_URL=redis://:staging_redis123@redis:6379

# JWT配置
JWT_SECRET=staging-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary配置（测试账号）
CLOUDINARY_CLOUD_NAME=staging-motor-projects
CLOUDINARY_API_KEY=staging-api-key
CLOUDINARY_API_SECRET=staging-api-secret

# SMTP邮件配置（测试配置）
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging-smtp-user
SMTP_PASS=staging-smtp-pass

# 监控配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging123

# 前端API配置
VITE_API_BASE_URL=https://api-staging.motor-projects.com

# 移动端配置
EXPO_USE_DEV_SERVER=false
EXPO_TOKEN=staging-expo-token

# 部署配置
STAGING_HOST=staging.motor-projects.com

# 安全配置（较宽松的测试设置）
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=combined

# 功能开关
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true