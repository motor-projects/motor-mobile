# 开发环境配置
NODE_ENV=development
ENVIRONMENT=dev

# 应用配置
APP_NAME=motorcycle-dev
APP_VERSION=1.0.0-dev
API_VERSION=v1

# 数据库配置
MONGODB_URI=mongodb://mongodb-service:27017/motorcycle_dev
MONGODB_DATABASE=motorcycle_dev
MONGODB_REPLICA_SET=rs0
MONGODB_MAX_POOL_SIZE=3
MONGODB_MIN_POOL_SIZE=1

# Redis 配置
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=2
REDIS_CONNECT_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# 安全配置
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=8h
API_KEY=${API_KEY}
SESSION_SECRET=${SESSION_SECRET}
BCRYPT_ROUNDS=8

# 服务器配置
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,https://dev.motorcycle.example.com
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_MAX_FILES=3
LOG_MAX_SIZE=1m

# 监控配置
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=development
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# 缓存配置
CACHE_TTL=600
CACHE_ENABLED=false
CACHE_PREFIX=motorcycle:dev

# 限流配置
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=/uploads

# 邮件配置
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_SECURE=false
FROM_EMAIL=dev@motorcycle.example.com

# AWS 配置
AWS_REGION=us-west-2
AWS_S3_BUCKET=motorcycle-dev-assets
AWS_CLOUDFRONT_DOMAIN=dev-cdn.motorcycle.example.com

# 性能配置
NODE_OPTIONS="--max-old-space-size=128"
UV_THREADPOOL_SIZE=2

# Kubernetes 配置
NAMESPACE=motorcycle-dev
REPLICAS=1
CPU_REQUEST=50m
CPU_LIMIT=200m
MEMORY_REQUEST=64Mi
MEMORY_LIMIT=128Mi

# 镜像配置
REGISTRY=ghcr.io
IMAGE_NAME=motorcycle/backend
IMAGE_TAG=dev

# SSL/TLS 配置
TLS_ENABLED=false
FORCE_HTTPS=false

# 备份配置
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 4 * * 0"
BACKUP_RETENTION_DAYS=7

# 开发工具
HOT_RELOAD=true
DEBUG_MODE=true
API_DOCS_ENABLED=true