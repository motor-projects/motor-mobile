# 生产环境配置
NODE_ENV=production
APP_NAME=Motor Projects

# 数据库配置（请使用强密码）
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
MONGODB_URI=mongodb://admin:CHANGE_THIS_STRONG_PASSWORD_123@mongo-primary:27017,mongo-secondary1:27017,mongo-secondary2:27017/motor?replicaSet=rs0&authSource=admin

# Redis配置（请使用强密码）
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_123
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_123@redis:6379

# JWT配置（请使用强密钥）
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_JWT_SECRET_KEY_FOR_PRODUCTION
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary配置（生产账号）
CLOUDINARY_CLOUD_NAME=motor-projects-prod
CLOUDINARY_API_KEY=YOUR_PRODUCTION_API_KEY
CLOUDINARY_API_SECRET=YOUR_PRODUCTION_API_SECRET

# SMTP邮件配置（生产邮件服务）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@motor-projects.com
SMTP_PASS=YOUR_EMAIL_APP_PASSWORD

# 监控配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# 前端API配置
VITE_API_BASE_URL=https://api.motor-projects.com

# 移动端配置
EXPO_USE_DEV_SERVER=false
EXPO_TOKEN=YOUR_EXPO_PRODUCTION_TOKEN

# 部署配置
PRODUCTION_HOST=motor-projects.com

# Webhook配置
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# 安全配置（严格的生产设置）
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Sentry配置（错误追踪）
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID

# 日志配置
LOG_LEVEL=warn
LOG_FORMAT=combined

# SSL配置
SSL_CERT_PATH=/etc/ssl/certs/motor-projects.crt
SSL_KEY_PATH=/etc/ssl/certs/motor-projects.key

# 备份配置
BACKUP_S3_BUCKET=motor-projects-prod-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# 功能开关（生产环境严格设置）
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=false

# 性能配置
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=52428800
COMPRESSION_LEVEL=6

# 数据库性能优化
DB_POOL_SIZE=10
DB_TIMEOUT=30000