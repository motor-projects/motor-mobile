# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:5000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# Application Configuration
EXPO_PUBLIC_APP_NAME=Motor Performance
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_SCHEME=motor-app

# Cache Configuration
EXPO_PUBLIC_CACHE_TIME=300000
EXPO_PUBLIC_STALE_TIME=60000

# Cloudinary Configuration
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_preset
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_api_key

# Feature Flags
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true
EXPO_PUBLIC_ENABLE_ERROR_BOUNDARY=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=false
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Performance Configuration
EXPO_PUBLIC_ENABLE_LAZY_LOADING=true
EXPO_PUBLIC_IMAGE_CACHE_SIZE=100
EXPO_PUBLIC_MAX_CONCURRENT_REQUESTS=5
EXPO_PUBLIC_DEBOUNCE_DELAY=300

# UI Configuration
EXPO_PUBLIC_DEFAULT_THEME=auto
EXPO_PUBLIC_DEFAULT_LANGUAGE=zh-CN
EXPO_PUBLIC_ITEMS_PER_PAGE=20
EXPO_PUBLIC_IMAGE_QUALITY=80

# Authentication
EXPO_PUBLIC_AUTH_TOKEN_KEY=motor_auth_token
EXPO_PUBLIC_AUTH_REFRESH_TOKEN_KEY=motor_refresh_token
EXPO_PUBLIC_BIOMETRIC_PROMPT_TITLE=Motor Authentication
EXPO_PUBLIC_BIOMETRIC_PROMPT_SUBTITLE=Use your biometric to authenticate

# Analytics and Monitoring
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_AMPLITUDE_API_KEY=
EXPO_PUBLIC_MIXPANEL_TOKEN=

# Social Media (for sharing)
EXPO_PUBLIC_TWITTER_HANDLE=@motor_team
EXPO_PUBLIC_FACEBOOK_APP_ID=

# Map Configuration (if using maps)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=

# Push Notifications
EXPO_PUBLIC_EXPO_PROJECT_ID=your_expo_project_id

# Development
EXPO_PUBLIC_ENABLE_MOCK_DATA=false
EXPO_PUBLIC_SHOW_PERFORMANCE_MONITOR=false
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_FLIPPER=true

# Offline Storage
EXPO_PUBLIC_OFFLINE_STORAGE_SIZE=50
EXPO_PUBLIC_CACHE_EXPIRY_DAYS=7